{
  "name": "ai-note",
  "displayName": "AI Note Assistant",
  "description": "AI 笔记助手 - 自动收集和显示笔记中的待办事项",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-note.showPanel",
        "title": "show note",
        "icon": "$(checklist)"
      },
      {
        "command": "ai-note.refresh",
        "title": "刷新待办事项"
      },
      {
        "command": "ai-note.clearAll",
        "title": "清除所有待办事项"
      },
      {
        "command": "ai-note.semanticScan",
        "title": "AI: Scan for Semantic Todos",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-note.configureApiKey",
        "title": "AI: Configure OpenAI API Key"
      },
      {
        "command": "ai-note.clearSemanticTodos",
        "title": "AI: Clear Semantic Todos"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ai-note.showPanel",
          "when": "true"
        },
        {
          "command": "ai-note.refresh",
          "when": "true"
        },
        {
          "command": "ai-note.clearAll",
          "when": "true"
        },
        {
          "command": "ai-note.semanticScan",
          "when": "editorLangId == markdown || editorLangId == plaintext"
        },
        {
          "command": "ai-note.configureApiKey",
          "when": "true"
        },
        {
          "command": "ai-note.clearSemanticTodos",
          "when": "editorLangId == markdown || editorLangId == plaintext"
        }
      ],
      "editor/context": [
        {
          "command": "ai-note.semanticScan",
          "when": "editorLangId == markdown || editorLangId == plaintext",
          "group": "ai-note"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
